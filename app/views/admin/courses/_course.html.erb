<div class="row" id="course-<%= course.id %>">
  <hr>
  <div class="col-md-3">
    <b><%= link_to course.name, admin_course_path(course) %></b>
  </div>
  <div class="col-md-2">
    <b><%= link_to t("buttons.edit"), edit_admin_course_path(course) %></b>
  </div>
  <div class="col-md-2">
    <%= link_to t("buttons.admin.course.assign_users"), edit_admin_course_assign_users_path(course),
      class: "btn btn-primary" %>
  </div>
  <% if course.active? %>
    <div class="col-md-2">
      <%= link_to t("buttons.admin.course.deactive"),"#", class: "btn btn-danger" %>
    </div> 
  <% else %>
    <div class="col-md-2">
      <%= link_to t("buttons.admin.course.active"),admin_course_active_courses_path(course),
        method: :put, remote: true, class: "btn btn-danger" %>
    </div> 
  <% end %>
  <div class="col-md-3">
    <%= link_to t("buttons.delete"), admin_course_path(course), method: :delete, 
      remote: true, data: {confirm: t("buttons.delete_confirm")} %>
  </div>
</div>
