<%= form_for [:admin, @course] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :day_word %>
  <%= f.text_field :day_word %>
  <%= hidden_field_tag "course[subject_ids][]", nil %>
  <% Subject.all.each do |subject| %>
    <%= f.label :subject_ids, class: "checkbox inline" do %>
      <%= f.check_box :subject_ids, {name: "course[subject_ids][]",
        checked: @course.subjects.include?(subject)}, subject.id, nil %>
      <span><%= subject.name %></span>
    <% end %>
  <% end %>
  <%= f.submit (f.object.new_record? ? t("buttons.admin.course.create") : 
    t("buttons.admin.course.update")), class: "btn btn-primary" %>
<% end %>
