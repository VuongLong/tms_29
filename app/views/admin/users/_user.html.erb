<div class="row" id="user-<%= user.id%>">
  <hr>
  <div class="col-md-2">
    <%= gravatar_for user  %>
  </div>
  <div class="col-md-2">
    <%= link_to user.name, @user %>
  </div>
  <div class="col-md-4">
    <%= user.email %>
  </div>
  <div class="col-md-2">
    <%= link_to "delete", admin_user_path(user), method: :delete, remote: true,
      data: {confirm: t("messages.admin.destroy.confirm")} %>
  </div>
</div>
