<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("links.logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("links.home"), root_path %></li>
        <% if user_signed_in? %>
          <% if current_user.admin? %>
            <li><%= link_to t("links.admin.users"), admin_users_path(@user) %></li>
            <li><%= link_to t("links.admin.courses"), admin_courses_path %></li>
            <li><%= link_to t("links.admin.subjects"), admin_subjects_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("links.profile"), user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("links.log_out"), destroy_user_session_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("links.log_in"), new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
